<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:transitionName="shareName">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/bezier"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="goDie"
            android:text="变化" />
        <Button
            android:id="@+id/search"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="goDie"
            android:text="变化" />
        <Button
            android:id="@+id/roate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="goDie"
            android:text="旋转" />
        <Button
            android:text="遥控"
            android:onClick="goDie"
            android:id="@+id/remote"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <com.example.jianxiongrao.demose.view.BezierView
        android:id="@+id/bezier_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
    <com.example.jianxiongrao.demose.view.SearchView
        android:id="@+id/search_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
    <ImageView
        android:padding="30dp"
        android:id="@+id/rotate_view"
        android:src="@drawable/img07"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
<com.example.jianxiongrao.demose.view.RemoteControlMenu
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/remote_view"/>
</LinearLayout>
